# Crystal E-Commerce Platform - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE
# ==============================================================================

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# LOCAL DEVELOPMENT (with Docker):
DATABASE_URL="postgresql://crystal:crystal123@localhost:5432/crystal_ecommerce"

# LOCAL DEVELOPMENT (with local PostgreSQL):
# DATABASE_URL="postgresql://postgres:your_password@localhost:5432/crystal_ecommerce"

# PRODUCTION (Railway will provide this):
# DATABASE_URL="postgresql://postgres:xxxxx@containers-us-west-xxx.railway.app:6543/railway"


# ==============================================================================
# NEXTAUTH - Authentication
# ==============================================================================

# Secret key for NextAuth.js (REQUIRED)
# Generate with: openssl rand -base64 32
# IMPORTANT: Use a strong, random value in production!
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# NextAuth URL
# LOCAL: Use localhost
NEXTAUTH_URL="http://localhost:3000"

# PRODUCTION (Railway): Use Railway variable or your custom domain
# NEXTAUTH_URL="${RAILWAY_PUBLIC_DOMAIN}"
# or
# NEXTAUTH_URL="https://your-domain.com"


# ==============================================================================
# ADMIN CREDENTIALS
# ==============================================================================

# Default admin login credentials
# Change these immediately for production!
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"

# PRODUCTION: Use a strong password!
# Example: ADMIN_PASSWORD="MyStr0ng!P@ssw0rd2024"


# ==============================================================================
# AI API KEYS (Optional)
# ==============================================================================

# These are OPTIONAL - the platform works without them
# Only needed if you want AI-powered content generation

# Google AI (Gemini)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=""

# OpenAI (GPT-4)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# Anthropic (Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=""


# ==============================================================================
# APPLICATION SETTINGS (Optional)
# ==============================================================================

# Node Environment
NODE_ENV="development"

# PRODUCTION:
# NODE_ENV="production"

# Application Port (default: 3000)
# PORT=3000


# ==============================================================================
# NOTES
# ==============================================================================

# SECURITY CHECKLIST:
# [ ] Changed ADMIN_PASSWORD from default
# [ ] Generated strong NEXTAUTH_SECRET (32+ characters)
# [ ] Never commit .env file to git (already in .gitignore)
# [ ] API keys are kept secret
# [ ] Database URL not exposed in client-side code

# GETTING API KEYS:
# - Google AI: https://makersuite.google.com/app/apikey
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/

# RAILWAY DEPLOYMENT:
# - DATABASE_URL: Provided automatically by Railway PostgreSQL
# - NEXTAUTH_URL: Use ${{RAILWAY_PUBLIC_DOMAIN}}
# - Other variables: Set manually in Railway dashboard

# LOCAL DEVELOPMENT:
# 1. Copy this file: cp .env.example .env
# 2. Update DATABASE_URL with your PostgreSQL credentials
# 3. Generate NEXTAUTH_SECRET: openssl rand -base64 32
# 4. Change ADMIN_PASSWORD to something secure
# 5. Add API keys if you have them (optional)

# TROUBLESHOOTING:
# - If database won't connect: Check PostgreSQL is running
# - If auth fails: Check NEXTAUTH_SECRET and NEXTAUTH_URL
# - If admin login fails: Check ADMIN_USERNAME and ADMIN_PASSWORD
# - Missing .env: Copy from .env.example first
